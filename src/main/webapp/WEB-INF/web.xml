<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0"
         xmlns="https://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">

    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>controller.HomePageServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>controller.ChangePassword</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ApplicationServlet</servlet-name>
        <servlet-class>controller.ApplicationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ComposeApplicationServlet</servlet-name>
        <servlet-class>controller.ComposeApplicationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ApplicationDetailServlet</servlet-name>
        <servlet-class>controller.ApplicationDetailServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DeleteApplicationServlet</servlet-name>
        <servlet-class>controller.DeleteApplicationServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>UploadExcelServlet</servlet-name>
        <servlet-class>controller.hr.UploadExcelServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HRRecruitmentServlet</servlet-name>
        <servlet-class>controller.hr.HRRecruitmentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HRManagerRecruitmentServlet</servlet-name>
        <servlet-class>controller.hrm.HRManagerRecruitmentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>EmployeeList</servlet-name>
        <servlet-class>controller.EmployeeList</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CandidateListServlet</servlet-name>
        <servlet-class>controller.CandidateListServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>CandidateDetailServlet</servlet-name>
        <servlet-class>controller.CandidateDetailServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>controller.LogOutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ForgetPassword</servlet-name>
        <servlet-class>controller.ForgetPassword</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>RecoveryPassword</servlet-name>
        <servlet-class>controller.RecoveryPassword</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>controller.ProfileServlet</servlet-class>
    </servlet>

    <!-- ===== SERVLET MAPPINGS ===== -->
    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ForgetPassword</servlet-name>
        <url-pattern>/forgetpassword</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>RecoveryPassword</servlet-name>
        <url-pattern>/recovery</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/changepassword</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ApplicationServlet</servlet-name>
        <url-pattern>/application</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ComposeApplicationServlet</servlet-name>
        <url-pattern>/compose</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ApplicationDetailServlet</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DeleteApplicationServlet</servlet-name>
        <url-pattern>/deleteapplication</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UploadExcelServlet</servlet-name>
        <url-pattern>/uploadExcel</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HRRecruitmentServlet</servlet-name>
        <url-pattern>/hrrecruitment</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HRManagerRecruitmentServlet</servlet-name>
        <url-pattern>/hrmanagerrecruitment</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>EmployeeList</servlet-name>
        <url-pattern>/employeelist</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CandidateListServlet</servlet-name>
        <url-pattern>/candidatelist</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CandidateDetailServlet</servlet-name>
        <url-pattern>/candidatedetail</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <welcome-file-list>
        <welcome-file>HomePageServlet</welcome-file>
    </welcome-file-list>

</web-app>
